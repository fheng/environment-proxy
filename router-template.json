{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {},
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${ENVIRONMENT_NAMESPACE}-router",
                "creationTimestamp": null,
                "labels": {
                    "router": "${ENVIRONMENT_NAMESPACE}-router"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "maxUnavailable": "25%",
                        "maxSurge": 0,
                        "updatePercent": -25
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "router": "${ENVIRONMENT_NAMESPACE}-router"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "router": "${ENVIRONMENT_NAMESPACE}-router"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "router",
                                "image": "docker.io/philipgough/haproxy",
                                "ports": [
                                    {
                                        "containerPort": 80
                                    },
                                    {
                                        "containerPort": 443
                                    },
                                    {
                                        "containerPort": 443
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "ROUTER_EXTERNAL_HOST_INSECURE",
                                        "value": "false"
                                    },
                                    {
                                        "name": "ROUTER_EXTERNAL_HOST_PRIVKEY",
                                        "value": "/etc/secret-volume/router.pem"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_HTTPS_PORT",
                                        "value": "443"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_HTTP_PORT",
                                        "value": "80"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_NAME",
                                        "value": "testrouter"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_NAMESPACE",
                                        "value": "${ENVIRONMENT_NAMESPACE}"
                                    },
                                    {
                                        "name": "STATS_PORT",
                                        "value": "1936"
                                    },
                                    {
                                        "name": "NAMESPACE_LABELS",
                                        "value": "${ENVIRONMENT_NAMESPACE}"
                                    },
                                    {
                                        "name": "NAMESPACE",
                                        "value": "${ENVIRONMENT_NAMESPACE}"
                                    },
                                    {
                                        "name": "TEMPLATE_FILE",
                                        "value": "/var/lib/haproxy/conf/custom-config.template"
                                    }
                                ],
                                "resources": {},
                                "livenessProbe": {
                                    "httpGet": {
                                        "path": "/healthz",
                                        "port": 1936,
                                        "host": "localhost"
                                    },
                                    "initialDelaySeconds": 10
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/healthz",
                                        "port": 1936,
                                        "host": "localhost"
                                    },
                                    "initialDelaySeconds": 10
                                },
                                "imagePullPolicy": "IfNotPresent"
                            }
                        ],
                        "serviceAccountName": "${ENVIRONMENT_USER}",
                        "serviceAccount": "${ENVIRONMENT_USER}",
                        "hostNetwork": false,
                        "securityContext": {}
                    }
                }
            },
            "status": {}
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "testrouter",
                "creationTimestamp": null,
                "labels": {
                    "router": "${ENVIRONMENT_NAMESPACE}-router"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "80-tcp",
                        "port": 80,
                        "targetPort": 80
                    },
                    {
                        "name": "443-tcp",
                        "port": 443,
                        "targetPort": 443
                    },
                   {
                        "name": "1936-tcp",
                        "protocol": "TCP",
                        "port": 1936,
                        "targetPort": 1936
                    }
                ],
                "selector": {
                    "router": "${ENVIRONMENT_NAMESPACE}-router"
                }
            },
            "status": {
                "loadBalancer": {}
            }
        }
    ],
      "parameters": [
        {
          "name": "ENVIRONMENT_NAMESPACE",
          "description": "The namespace the router should be limited to",
          "value": "rhmap-rhmap-haproxy",
          "required": true
        },
        {
          "name": "ENVIRONMENT_USER",
          "description": "The namespace the router should be limited to",
          "value": "rhmap-user-haproxy",
          "required": true
        }
      ]
}
