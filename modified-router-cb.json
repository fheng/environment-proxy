{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {},
    "objects": [
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "router",
                "creationTimestamp": null
            }
        },
        {
            "kind": "ClusterRoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "router-rhmap-rhmap-myrouter-role",
                "creationTimestamp": null
            },
            "userNames": [
                "system:serviceaccount:${ENVIRONMENT_NAMESPACE}:router"
            ],
            "groupNames": null,
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "namespace": "${ENVIRONMENT_NAMESPACE}",
                    "name": "router"
                }
            ],
            "roleRef": {
                "kind": "ClusterRole",
                "name": "system:router"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${ENVIRONMENT_NAMESPACE}",
                "creationTimestamp": null,
                "labels": {
                    "router": "${ENVIRONMENT_NAMESPACE}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "maxUnavailable": "25%",
                        "maxSurge": 0,
                        "updatePercent": -25
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "router": "${ENVIRONMENT_NAMESPACE}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "router": "${ENVIRONMENT_NAMESPACE}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "router",
                                "image": "docker.io/philipgough/haproxy:craig",
                                "ports": [
                                    {
                                        "containerPort": 80
                                    },
                                    {
                                        "containerPort": 443
                                    },
                                    {
                                        "name": "stats",
                                        "containerPort": 1936,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "ROUTER_EXTERNAL_HOST_INSECURE",
                                        "value": "false"
                                    },
                                    {
                                        "name": "ROUTER_EXTERNAL_HOST_PRIVKEY",
                                        "value": "/etc/secret-volume/router.pem"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_HTTPS_PORT",
                                        "value": "443"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_HTTP_PORT",
                                        "value": "80"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_NAME",
                                        "value": "${ROUTER_SERVICE}"
                                    },
                                    {
                                        "name": "ROUTER_SERVICE_NAMESPACE",
                                        "value": "${ENVIRONMENT_NAMESPACE}"
                                    },
                                    {
                                        "name": "NAMESPACE",
                                        "value": "${ENVIRONMENT_NAMESPACE}"
                                    },
                                    {
                                        "name": "STATS_PASSWORD",
                                        "value": "tw6O0BsOBf"
                                    },
                                    {
                                        "name": "STATS_PORT",
                                        "value": "1936"
                                    },
                                    {
                                        "name": "STATS_USERNAME",
                                        "value": "admin"
                                    }
                                ],
                                "resources": {},
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "serviceAccountName": "router",
                        "serviceAccount": "router",
                        "hostNetwork": false,
                        "securityContext": {}
                    }
                }
            },
            "status": {}
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${ROUTER_SERVICE}",
                "creationTimestamp": null,
                "labels": {
                    "router": "${ENVIRONMENT_NAMESPACE}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "80-tcp",
                        "port": 80,
                        "targetPort": 80
                    },
                    {
                        "name": "443-tcp",
                        "port": 443,
                        "targetPort": 443
                    },
                    {
                        "name": "1936-tcp",
                        "protocol": "TCP",
                        "port": 1936,
                        "targetPort": 1936
                    }
                ],
                "selector": {
                    "router": "${ENVIRONMENT_NAMESPACE}"
                }
            },
            "status": {
                "loadBalancer": {}
            }
        }
    ],
      "parameters": [
        {
          "name": "ENVIRONMENT_NAMESPACE",
          "description": "The namespace the router should be limited to",
          "value": "rhmap-rhmap-rhmap-rhmap-myrouter"
        },
        {
          "name": "ROUTER_SERVICE",
          "value": "environment-router",
          "required": true
        }
      ]
}
